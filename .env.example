# ==============================================
# Configurações de Banco de Dados
# ==============================================

# Communication Service Database (PostgreSQL)
COMMUNICATION_DB_PASSWORD=Communication@123456
COMMUNICATION_DB_PORT=5436

# ==============================================
# Configurações de Serviço
# ==============================================

# Communication Service
COMMUNICATION_SERVICE_PORT=5006
COMMUNICATION_SERVICE_INTERNAL_PORT=5000

# ==============================================
# Configurações de Segurança
# ==============================================

# JWT Secret Key (mesma chave dos outros serviços)
JWT_SECRET_KEY=your-jwt-secret-key-here

# ==============================================
# Configurações de RabbitMQ
# ==============================================

RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VIRTUAL_HOST=/

# ==============================================
# Configurações de Serviços Externos
# ==============================================

# Message Service (WhatsApp)
MESSAGE_SERVICE_BASE_URL=http://localhost:5275

# ==============================================
# Configurações de Ambiente
# ==============================================

# Ambiente de execução
ASPNETCORE_ENVIRONMENT=Development

# URLs de bind dos serviços
ASPNETCORE_URLS=http://+:5000

# ==============================================
# Configurações de NuGet Privado
# ==============================================

# URL do feed NuGet privado
NUGET_SOURCE_URL=https://pkgs.dev.azure.com/async6/_packaging/async6/nuget/v3/index.json

# Credenciais do NuGet privado
NUGET_USERNAME=your-username
NUGET_PASSWORD=your-password

# Azure DevOps PAT
AZURE_DEVOPS_PAT=your-pat-here

# ==============================================
# Configurações de Rede
# ==============================================

# Nome da rede Docker
DOCKER_NETWORK_NAME=saas-network

# ==============================================
# Configurações de Health Check
# ==============================================

HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=5
HEALTH_CHECK_START_PERIOD=60
